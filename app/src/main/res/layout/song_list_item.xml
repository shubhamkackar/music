<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip">
    
    <ImageView
        android:id="@+id/img_listitem_file"
        android:layout_height="60dip"
        android:layout_width="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/musical_note"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/txt_listitem_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Dummy File"
            android:textStyle="bold"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/txt_listitem_albumname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Dummy Singer"
                />
            
            <TextView
                android:id="@+id/txt_listitem_duration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:singleLine="true"
                android:text="4:32"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
